<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Parkplorer</title>
	</head>
	<body>
		<h1>Explore</h1>
		<section>
			<h2>Search for parks by state</h2>
			<form action="/explore" id="form" name="stateName" method="POST">
				<select name="stateName" id="state">
					<option value="null">Select State</option>
					<% for (const [state, abbrev] of Object.entries(states)) { %>
					<option value="<%= abbrev %>"><%= state %></option>
					<% } %>
				</select>
				<button type="submit">Search</button>
			</form>
		</section>
		<section>
			<% if (data.length == 0) { %>
			<p>No results to view.</p>
			<% } %> <% if (data) { %>
			<ol>
				<% for (park of data) { %>
				<li>
					<a href="/park/<%= park.parkCode %>"
						><%= park.fullName %> (<%= park.states %>)</a
					>
					- <%= park.designation %>
				</li>
				<% } %>
			</ol>
			<% } %>
		</section>
	</body>
</html>
